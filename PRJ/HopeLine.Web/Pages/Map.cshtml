    if (Model.isUser)
    {
        Layout = "/Pages/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "/Pages/Shared/_mentorLayout.cshtml";
    }
}

@section Styles{
        <link rel="stylesheet" href="~/css/map.css" />
}


<div class="contain" style="margin-top: 90px;">
    
</div>
    <input name="locationBox" value="Hospital" type="checkbox" id="c1" onclick="searchType('Hospital',this)" />
    <label for="c1">
        <div>&#x2714;</div>Hospital<br />
    </label>
    <input name="locationBox" value="pharmacy" type="checkbox" id="c2" onclick="searchType('pharmacy',this)" />
    <label for="c2">
        <div>&#x2714;</div>Pharmacy<br />
    </label>

    <input name="locationBox" value="health" type="checkbox" id="c3" onclick="searchType('spa',this)" />
