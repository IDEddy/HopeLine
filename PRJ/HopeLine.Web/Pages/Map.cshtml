    ViewData["Title"] = "Map";
}

<head>


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0 shrink-to-fit=no">
    <title>Map Page</title>
    <link rel="stylesheet" href="~/css/map.css" />
