}

 <!-- Start Slider Area -->
    <div id="home" class="slider-area">
      <div class="bend niceties preview-2">
        <div id="ensign-nivoslider" class="slides" style="resize:both;">
          <!---->
          <img src="~/images/background1.jpg" alt="" title="#slider-direction-1" />
          <img src="~/images/background2.jpg" alt="" title="#slider-direction-2" />
          <img src="~/images/background3.jpg" alt="" title="#slider-direction-3" />
        </div>

        <!-- direction 1 -->
        <div id="slider-direction-1" class="slider-direction slider-one">
          <div class="container">
            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                  <div class="slider-content">
                      <!-- layer 2 -->
                      <div class="layer-1-2 wow slideInUp" data-wow-duration="2s" data-wow-delay=".1s">
                          <h1 class="title2">We're here to help you. Click the button below to speak to a mentor</h1>
                      </div>
                      <!-- layer 3 -->
                      <div class="layer-1-3  wow slideInUp mt-2" data-wow-duration="2s" data-wow-delay=".2s">
