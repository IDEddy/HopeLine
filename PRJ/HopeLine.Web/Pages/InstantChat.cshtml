@page

@model InstantChatModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Talk to Mentor";
}

<input id="isUser" value=@Model.IsUser hidden />
<section class="container" style="margin-top:100px;">
    <div class="row justify-content-center p-2 shadow-lg"style="height:600px">
        <!-- end of users-->
        <div class="col-md-7 col-sm-12 p-0">
            <div class="row m-0">
                <div class="col-sm-12">
                    <h3 class="">Instant Chat</h3>
                    <div class=" text-right ml-1">
                    <a class=" btn  btn-outline-dark " href="https://www.google.ca"><i class="fas fa-phone fa-1x"></i></a>
                    <a data-target="#incomingCall" data-toggle="modal" id="videoCallBtn" class=" btn btn-outline-dark" ><i class="fas fa-video fa-1x"></i></a>
                </div>
                </div>
                
            </div>

            <input id="pin" value=@Model.PIN hidden />
            <div class="modal" id="loading" >
                        Waiting for Mentor...
                        <img src="/images/logo_loading.jpeg" alt="image" class="img img-fluid rounded-circle fa-spin" style="height:25px; width:25px" ></img>
                        <a href="@Url.Page("/index")" class="btn btn-primary">Cancel</a>
                        <a href="#" rel="modal:close" id="mentorFound" hidden></a>
            </div>
            <p hidden><a id="openLoading" href="#loading" rel="modal:open"></a></p>
            <div class="col-12 border-top" style="height:500px; overflow-y:auto;" id="message">
                <div id="chatbox" class="card-body bg-clear">
                    
                </div>
            </div>

            <div id="sendArea" class="col-12 border bg-white p-1 d-none">
                <div class="row m-1">
                    <div class="col-8" id="messageBar">
                        <textarea id="messageInput" class="form-control col-10" type="text" placeholder="type a message" rows="1" autofocus></textarea>
                    </div>
                    <div class="col-3">
                        <input id="sendButton" type="button" class="btn btn-info btn-lg" value="Send" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="disconnection" class="modal">
        <p>You are disconnected from the chat</p>
    </div>
    <p hidden><a id="modaltrigger" href="#disconnection" rel="modal:open"></a></p>
</section>

