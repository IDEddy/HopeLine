@page
@model HopeLine.Web.Areas.Admin.Pages.LoginModel
@{
      Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div style="margin-top:100px;"></div>
<section class="mentor-login justify-content-center mb-5">
    <div class="row justify-content-center">
    <form class=" col-xs-12 shadow-lg rounded p-5 m-0">
        <h1 class="display-5">Mentor Access</h1>
        <hr />
        <input type="text" id="inputId" class="form-control" placeholder="Username / ID" required autofocus>
        <br />
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control mb-2" placeholder="Password" required>

        <br />
        <button class="btn btn-lg btn-success btn-block" type="submit">Sign in</button>
        </form>
    </div>
</section>