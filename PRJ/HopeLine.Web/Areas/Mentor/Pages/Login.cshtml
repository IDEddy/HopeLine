@page
@using HopeLine.Web.Areas.Mentor.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginModel
@{
      Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="mentor-login justify-content-center mb-5" style="margin-top:100px;">
    <div class="row justify-content-center">
    <form  method="POST" class=" shadow-lg rounded p-5 m-0">
        <h1 class="text-success">Mentor Access</h1>
         @{
           if(!ModelState.IsValid){
            <div class="alert alert-danger p-2" role="alert">
                    <small>
                        Ops! Invalid Login. Please try again...
                    </small>
            </div>
            }
            else{
            <div class="alert alert-info  p-2" role="alert">
                <small>
                    Please fill all required textfields.
                </small>
            </div>
            }
        }
         <div class="form-group">
            <label for="email"><small class="text-muted">Email Address</small><span class="text-danger"> *</span></label>
            <input asp-for="LoginInput.Username" type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter Email" autofocus>
            <small>
                <span asp-validation-for="LoginInput.Username" class="text-danger p-0"></span>
            </small>
        </div>
         <div class="form-group">
            <label for="password"><small class="text-muted">Password</small><span class="text-danger"> *</span></label>
            <input asp-for="LoginInput.Password" type="password" class="form-control" id="password" aria-describedby="passwordHelp" placeholder="Enter Password" autofocus>
            <small>
                <span asp-validation-for="LoginInput.Password" class="text-danger text-nowrap"></span>
            </small>
        </div>
        <button id="loginbutton" class="btn btn-lg btn-success btn-block" type="submit">Sign in</button>
        <div class="mt-3 text-center">
        <a class="col-12" href="" >Forgot Password?</a>
        
        <a class="btn col-12" href=@Url.Page("/Login", new {area= "User" }) >Login as User</a>
        </div>
        </form>
    </div>
</div>