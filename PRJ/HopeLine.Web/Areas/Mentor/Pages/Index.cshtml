@page
@using HopeLine.Web.Areas.Mentor.Pages
@model IndexModel
@using Microsoft.AspNetCore.Identity

@inject UserManager<HopeLine.DataAccess.Entities.HopeLineUser> UserManager
@{
    //Layout = "/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
    Layout = "/Pages/Shared/_mentorLayout.cshtml";

}




<head>
    <link rel="stylesheet" , href="~/css/resources.css" />

    <style>
        .hidediv {
            display: none;
        }

        .unhidedive {
            display: block;
        }
    </style>
</head>

<section class="mt-5">
    <div class="accordion" id="mentor">
        <!-- The sidebar -->
        <div class="sidebar bg-dark">

            <!-- Profile -->
            <div>
                <div class="card bg-dark">
                    <div class="card-header" id="profileHeader">
                        <h5 class="mb-0">
                            <a class="btn nav-link mt-5 dropdown" data-toggle="collapse" data-target="#profile" style="color:rgba(255,255,255,.5)">
                                Profile
                            </a>
                        </h5>
                    </div>
                </div>
            </div>


            <!-- Chat -->
            <div>
                <div class="card bg-dark">
                    <div class="card-header" id="chatHeader">
                        <h5 class="mb-0">
                            <a class="btn nav-link dropdown" data-toggle="collapse" data-target="#changepassword" style="color:rgba(255,255,255,.5)">
                                Change Password
                            </a>
                        </h5>
                    </div>
                </div>
            </div>

            <!-- Stat -->
            <div>
                <div class="card bg-dark">
                    <div class="card-header" id="statHeader">
                        <h5 class="mb-0">
                            <a class="btn nav-link dropdown" data-toggle="collapse" data-target="#stat" style="color:rgba(255,255,255,.5)">
                                Statistics
                            </a>
                        </h5>
                    </div>
                </div>
            </div>


        </div>
        <!--Sidebar END-->
        <!-- Page content -->
        <div class="content accordion-group">
            <!--Profile tab-->
            <div id="profile" class="collapse container bootstrap snippet show" data-parent="#mentor" style="margin:0 auto; float:none; margin-top: 20px" active>
                <div class="row">
                    <div class="col-md-10">
                        <h1>@Model.CurrentMentor.Username</h1>
                    </div>
                    <div class="col-md-2">
                        <input id="unhide" type="button" value="Go Chat" />
                    </div>
                </div>
                <div class="row p-0 m-0">

                    <div class="col-md-8">
                        <hr>
                        <form class="form" action="##" method="post" id="registrationForm">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="mentorId" id="mentorId" placeholder=@Model.CurrentMentor.Id hidden disabled>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="email">
                                            <h4>Email</h4>
                                        </label>
                                        <input type="email" class="form-control" name="email" id="email" placeholder=@Model.CurrentMentor.Email
                                               title="enter your email." disabled>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">


                                        <label for="phone">
                                            <h4>Phone Number</h4>
                                        </label>
                                        <input type="text" class="form-control" name="phone" id="phone" value=@Model.CurrentMentor.Phone>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">


                                        <label for="username">
                                            <h4>First Name</h4>
                                        </label>
                                        <input type="text" class="form-control" name="username" id="username" value=@Model.CurrentMentor.FirstName>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">


                                        <label for="username">
                                            <h4>Last Name</h4>
                                        </label>
                                        <input type="text" class="form-control" name="username" id="username" value=@Model.CurrentMentor.LastName>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">

                                    <br>
                                    <button class="btn btn-lg btn-success" type="submit">
                                        <i class="glyphicon glyphicon-ok-sign"></i>
                                        Save
                                    </button>

                                </div>
                            </div>

                        </form>

                    </div>

                    <!--chat content-->

                    <input id="pin" value="@Model.PIN" hidden>
                    <div class="chat col-md-4 shadow-sm hidediv" id="chatwindow" fixed>
                        <div class="card">
                            <div class="card-header">
                                <h3>
                                    Chat
                                </h3>
                            </div>
                            <div class="col-12 bg-light" style="height:500px; overflow-y:auto;" id="message">
                                <div id="chatbox" class="card-body bg-clear">

                                </div>
                            </div>
                            <div class="card-footer text-muted">
                                <div class="form-row">
                                    <div class="col-9">
                                        <textarea class="form-control" id="messageInput" rows="1"></textarea>
                                    </div>
                                    <div class="col-3">
                                        <input type="button" id="sendButton" class="btn btn-success" value="Send" autofocus />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--chat content-->
                    <hr>
                    <!--video request modal-->
                    <div id="incomingCall" class="modal" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Video Call</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Answer Incoming Call</p>
                                </div>
                                <div class="modal-footer">
                                    <button id="dismissCall"type="button" class="btn btn-secondary" data-dismiss="modal">Decline</button>
                                    <button id="acceptCall"  class="btn btn-primary">Answer</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--/tab-content-->
                    <!--/col-9-->
                </div>
                <!--/row-->


            </div>
            <!--Profile END-->
            <!-- Change Password START-->
            <div id="changepassword" class="collapse container" data-parent="#mentor" style="margin:0 auto; float:none; margin-top: 90px">
                <div class="row">
                    <div class="col-md-10">
                        <h1>Change Password</h1>
                    </div>

                </div>

                <div class="col-md-6">
                    <form id="change-password-form" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.OldPassword">OldPassword</label>
                            <input asp-for="Input.OldPassword" class="form-control" required />
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.NewPassword">NewPassword</label>
                            <input asp-for="Input.NewPassword" class="form-control" required />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword">ConfirmPassword</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" required />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-default">Update password</button>
                    </form>
                </div>

            </div>
            <!-- Change Password END-->
            <!-- Conversation History START -->
            <div id="stat" class="collapse container" data-parent="#mentor" style="margin:0 auto; float:none; margin-top: 90px">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">User Id</th>
                            <th scope="col">PIN</th>
                            <th scope="col">Minutes</th>
                            <th scope="col">Date of Conversation</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Conversations)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.UserId</td>
                                <td>@item.PIN</td>
                                <td>@item.Minutes</td>
                                <td>@item.DateOfConversation</td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
            <!-- Conversation History END-->


        </div>

    </div>


</section>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>


        $("#switch-id").on("click", function () {
            $("#password").prop("disabled", !$("#password").prop("disabled"));
            $("#password1").prop("disabled", !$("#password1").prop("disabled"));
            $("#password2").prop("disabled", !$("#password2").prop("disabled"));
        });

    </script>
    <script>
        $(function () {
            $("#unhide").click(function () {
                console.log("fewafwgfWGRBGFRFWE")
                var item = document.getElementById("chatwindow");
                if (item) {
                    if (item.className == "chat col-md-4 shadow-sm hidediv") {
                        item.className = "chat col-md-4 shadow-sm unhidediv";
                        $("#unhide").value = "Close"
                    } else {
                        item.className = "chat col-md-4 shadow-sm hidediv";
                        $("#unhide").value = "Go Chat"
                    }
                }
            });

        });

        // Hit ENTER to send messages
        $(function () {
            $("#messageInput").keypress(function (enter) {
                var code = (enter.keyCode ? enter.keyCode : enter.which);

                if (code == 13) {
                    enter.preventDefault();
                    $("#sendButton").trigger('click');
                }
            });
        });


    </script>
}