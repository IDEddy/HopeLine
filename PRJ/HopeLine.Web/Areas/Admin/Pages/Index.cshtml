@page
@model HopeLine.Web.Pages.HopeLineUser
@{
    ViewData["Title"] = "Admin Home";
    Layout = "/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
}

<hr />
<div class="container">
    <div class="row" style="margin-top:60px">
        <div class="col-md-4 float-left">
            <input type="text" value="Search" />
        </div>
        <div class="col-md-4">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Search by account type
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <button class="dropdown-item btn btn-primary">Mentor</button>
                    <button class="dropdown-item  btn btn-primary">User</button>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <button class="btn btn-success">Add mentor</button>
        </div>

    </div>
</div>
<hr />
<div class="container">
    <div class="row">
        <b class="col-md-2">Id</b>
        <b class="col-md-2">First&nbsp;Name</b>
        <b class="col-md-2">Last&nbsp;Name</b>
        <b class="col-md-2">Account&nbsp;Type</b>
        <b class="col-md-4">Manage</b>
    </div>
    <hr />
 
    @foreach (var item in Model.HopeLine)
    {
        <div class="row h-100">

            <div class="col-md-2">@Html.DisplayFor(modelitem => item.Email) </div>
            <div class="col-md-2">@Html.DisplayFor(modelitem => item.FirstName)</div>
            <div class="col-md-2">@Html.DisplayFor(modelitem => item.LastName)</div>
            <div class="col-md-2">@Html.DisplayFor(modelitem => item.AccountType)</div>
            <div class="col-md-4">
                <a class="btn btn-warning">
                    Manage
                </a>
            </div>
        </div>
    }

</div>




